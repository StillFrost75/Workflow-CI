name: Heart_Disease_Classification

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      C: {type: float, default: 0.1}
      solver: {type: string, default: "lbfgs"}
      max_iter: {type: int, default: 100}
      dataset : {type: string, default: "heartdisease_preprocessing/train_processed.csv"}
    command: "python modelling.py {C} {solver} {max_iter} {dataset}"
